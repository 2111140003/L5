<% @tweets.each do |e| %>
<p>
    <%= e.message %>
    <%= link_to "削除", user_path(e), data: {"turbo-method": :delete} %>
</p>

<hr>

<% end %>
<%= form_for @tweet, url: {action: :create} do |f| %>
    <%= f.label :message, 'message' %>
    <%= f.text_field :message %>
    <%= f.submit 'ツイート' %>
<% end %>